<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgr_timkiem"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:background="@drawable/bgr_playmusic"
        android:id="@+id/AppBarSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ToolbarTimkiem"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"/>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Rcvtimkiem"
        android:background="@drawable/bgr_timkiem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/AppBarSearch"/>
    <TextView

        android:id="@+id/txtNull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="#CFCECE"
        android:visibility="gone"
        android:text="Không có dữ liệu"/>


</RelativeLayout>